<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zachary_moore.annoying_spam.MainActivity">

    <TextView
        android:text="Number to send to:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/numberView"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/numberView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="17dp"
        android:id="@+id/numberToSend" />

    <TextView
        android:text="Message to send:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberToSend"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/messageView"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Text"
        android:ems="10"
        android:layout_below="@+id/messageView"
        android:layout_alignEnd="@+id/numberToSend"
        android:layout_marginTop="22dp"
        android:id="@+id/messageToSend" />

    <TextView
        android:text="Number of messages to send:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/numberMessView"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/messageToSend"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/numberMessView"
        android:layout_alignStart="@+id/messageToSend"
        android:layout_marginTop="20dp"
        android:id="@+id/numberOfMessages" />

    <Button
        android:text="Annoy!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendButton"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_light"
        android:background="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/numberOfMessages"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
